<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Category Of Soil"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"/>
        <RadioGroup
            android:id="@+id/soilselection1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp">

            <RadioButton
                android:id="@+id/alluvial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alluvial Soil"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                />
            <RadioButton
                android:id="@+id/lateric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lateric Soil"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />
            <RadioButton
                android:id="@+id/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red Soil"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />
            <RadioButton
                android:id="@+id/sandy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sandy Soil"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />
            <RadioButton
                android:id="@+id/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black Soil"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />


        </RadioGroup>

        <ImageButton
            android:id="@+id/Groundnut"
            android:layout_width="273dp"
            android:layout_height="265dp"
            android:layout_below="@+id/soilselection1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:src="@drawable/groundnut"
            android:onClick="groundnut"/>

        <ImageButton
            android:id="@+id/jute"
            android:layout_width="273dp"
            android:layout_height="200dp"
            android:layout_below="@+id/Groundnut"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/jute"
            android:onClick="jute"/>
        <ImageButton
            android:id="@+id/scane"
            android:layout_width="273dp"
            android:layout_height="265dp"
            android:layout_below="@+id/jute"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/scane"
            android:onClick="sugar"/>
        <ImageButton
            android:id="@+id/tobacco"
            android:layout_width="273dp"
            android:layout_height="265dp"
            android:layout_below="@+id/scane"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/tobacco"
            android:onClick="tobaco"/>
        <ImageButton
            android:id="@+id/coffee"
            android:layout_width="273dp"
            android:layout_height="265dp"
            android:layout_below="@+id/tobacco"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/coffee"
            android:onClick="coffee"/>
        <ImageButton
            android:id="@+id/rice"
            android:layout_width="273dp"
            android:layout_height="265dp"
            android:layout_below="@+id/coffee"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/rice"
            android:onClick="rice"/>
        <ImageButton
            android:id="@+id/wheat"
            android:layout_width="273dp"
            android:layout_height="265dp"
            android:layout_below="@+id/rice"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/wheat"
            android:onClick="wheat"/>
        <ImageButton
            android:id="@+id/carrot"
            android:layout_width="273dp"
            android:layout_height="265dp"
            android:layout_below="@+id/wheat"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/carrot"
            android:onClick="carrot"/>
        <ImageButton
            android:id="@+id/tomato"
            android:layout_width="273dp"
            android:layout_height="265dp"
            android:layout_below="@+id/carrot"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/tomato"
            android:onClick="tomato"/>
        <ImageButton
            android:id="@+id/cotton"
            android:layout_width="273dp"
            android:layout_height="265dp"
            android:layout_below="@+id/tomato"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/cotton"
            android:onClick="cotton"/>
        <ImageButton
            android:id="@+id/chilli"
            android:layout_width="273dp"
            android:layout_height="265dp"
            android:layout_below="@+id/cotton"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/chilli"
            android:onClick="chilli"/>
    </RelativeLayout>

</ScrollView>

