<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".extras">

    <FrameLayout
        android:id="@+id/likeimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:onClick="unfilled"
        android:id="@+id/unfill"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:foregroundGravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:src="@drawable/unfillheart"></ImageView>



    <ImageView
        android:onClick="filled"
        android:id="@+id/filled"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:foregroundGravity="center"
        android:layout_marginTop="3dp"
        android:src="@drawable/fillred"></ImageView>


        <TextView
            android:id="@+id/likes"
            android:textSize="20dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"></TextView>
        <TextView
            android:textSize="20dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Likes"></TextView>

    </FrameLayout>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="328dp"
        android:layout_height="160dp"
        android:hint="OOps"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>